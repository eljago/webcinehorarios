<!DOCTYPE html>
<html>
	<head>
		<title><%= yield(:title) %></title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='http://fonts.googleapis.com/css?family=Nunito' rel='stylesheet' type='text/css'>
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
		<%= favicon_link_tag 'favicon.ico' %>
	</head>

	<body id="admin">
		
		<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
			<div class="container">
			  <div class="navbar-header">
			    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
			      <span class="sr-only">Toggle navigation</span>
			      <span class="icon-bar"></span>
			      <span class="icon-bar"></span>
			      <span class="icon-bar"></span>
			    </button>
			  </div>
			  <div class="collapse navbar-collapse navbar-ex1-collapse">
			    <ul class="nav navbar-nav">
			      <li>
							<%= link_to admin_path do %>
								<i class="icon-home"></i>
								Inicio
							<% end %>
						</li>
			      <li>
							<%= link_to admin_users_path do %>
								<i class="icon-user"></i>
								Users
							<% end %>
						</li>
			      <li>
							<%= link_to admin_contact_tickets_path do %>
								<i class="icon-tag"></i>
								Contactos
							<% end %>
						</li>
			      <li>
							<%= link_to admin_opinions_path do %>
								<i class="icon-comments"></i>
								Opiniones
							<% end %>
						</li>
			      <li>
							<%= link_to admin_countries_path do %>
								<i class="icon-globe"></i>
								Países
							<% end %>
						</li>
			      <li>
							<%= link_to admin_cinemas_path do %>
								<i class="icon-building"></i>
								Cines
							<% end %>
						</li>
			      <li>
							<%= link_to admin_shows_path do %>
								<i class="icon-film"></i>
								Shows
							<% end %>
						</li>
			      <li>
							<%= link_to admin_genres_path do %>
								<i class="icon-comments"></i>
								Géneros
							<% end %>
						</li>
			      <li>
							<%= link_to admin_function_types_path do %>
								<i class="icon-bookmark"></i>
								Tipos de Función
							<% end %>
						</li>
			      <li>
							<%= link_to admin_people_path do %>
								<i class="icon-group"></i>
								Personas
							<% end %>
						</li>
			    </ul>
			  </div>
		  </div>
	  </nav>
		
		<div class="container">
			<div class="row">
				<div class="col-sm-8">
					<%= render_navigation %>
				</div>
				<div class="col-sm-4">
					<%= render 'layouts/user_login' %>
				</div>
			</div>
			<%= render 'layouts/messages' %>
			<%= yield %>
		</div>
	</body>
</html>
