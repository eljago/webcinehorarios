              <% end %>
            </li>
            <li>
              <%= link_to admin_award_types_path do %>
                Award Types
              <% end %>
            </li>
          </ul>
        </li>

        <%= link_to [:admin, :videos] do %>
          <%= fa_icon "play", text: "Videos" %>
        <% end %>

        <%= link_to [:admin, :orphan_parsed_shows] do %>
          <%= fa_icon "play", text: "Parsed Shows" %>
        <% end %>

      <% end %>
  	<% end %>

    <%= nav id: 'navbar-cine-horarios', class: 'navbar-right' do %>
      <% if member_signed_in? %>
        <%= link_to current_member.email, edit_member_registration_path %>
        <%= link_to "Cerrar Sesión", destroy_member_session_path, method: :delete %>
      <% else %>
        <%= link_to "Iniciar Sesión", new_member_session_path %>
      <% end %>
    <% end %>

  <% end %>

