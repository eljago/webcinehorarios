            <li>
              <%= link_to admin_people_path do %>
                <%= fa_icon "group", text: "Todos los Actores" %>
              <% end %>
            </li>
          </ul>
        </li>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-hover="dropdown">
            <%= fa_icon "building", text: "Cines" %>
            <%= fa_icon "caret-down" %>
          </a>
          <ul class="dropdown-menu">
            <li>
              <%= link_to admin_cinemas_path do %>
                Todos
              <% end %>
            </li>
            <% Cinema.all.each do |cinema| %>
              <li>
                <%= link_to admin_cinema_theaters_path(cinema) do %>
                  <%= image_tag cinema.image, size: "20x20" %>
                  <%= cinema.name %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-hover="dropdown">
            <%= fa_icon "film", text: "Shows" %>
            <%= fa_icon "caret-down" %>
          </a>
          <ul class="dropdown-menu">
            <li>
              <%= link_to new_admin_show_path do %>
                Nuevo
              <% end %>
            </li>
            <li>
              <%= link_to admin_shows_path do %>
                Todos
              <% end %>
            </li>
            <li>
              <%= link_to billboard_admin_shows_path do %>
