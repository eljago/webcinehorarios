        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-hover="dropdown">
            Admin
            <%= fa_icon "caret-down" %>
          </a>
          <ul class="dropdown-menu">
            <li>
              <%= link_to admin_contact_tickets_path do %>
                <%= fa_icon "tag", text: "Contactos" %>
              <% end %>
            </li>
            <li>
              <%= link_to admin_opinions_path do %>
                <%= fa_icon "comments", text: "Opiniones" %>
              <% end %>
