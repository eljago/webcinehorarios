            <li>
              <%= link_to admin_function_types_path do %>
                <%= fa_icon "bookmark", text: "Tipos de Función" %>
              <% end %>
            </li>
            <li>
              <%= link_to admin_settings_path do %>
                <%= fa_icon "cog", text: "Ajustes" %>
              <% end %>
            </li>
          </ul>
        </li>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-hover="dropdown">
            <%= fa_icon "group", text: "Actores" %>
            <%= fa_icon "caret-down" %>
          </a>
          <ul class="dropdown-menu">
            <li>
              <%= link_to new_admin_person_path do %>
                <%= fa_icon "user", text: "Nuevo Actor" %>
              <% end %>
