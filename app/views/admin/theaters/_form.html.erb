<%= simple_form_for [:admin, @theaterable, @theater] do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :active %>
    <%= f.input :web_url %>
    <%= f.input :address %>
    <%= f.input :information %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.association :city, as: :radio_buttons %>
    <%= f.association :cinema, as: :radio_buttons %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
