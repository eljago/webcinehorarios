<fieldset class="nomination_person_role">
	
  <div class="form-group">
		<div class="destroy col-sm-1">
			<%= f.hidden_field :_destroy %>
			<button class="close remove_fields">X</button>
		</div>
		<%= f.label :person_id, 'Persona:', class: 'col-sm-2 control-label' %>
		<div class="col-sm-8">
			<%= f.collection_select :person_id, @people, :id, :name, {include_blank: true}, { class: "chzn-select, form-control" } %>
    </div>
  </div>
		
</fieldset>