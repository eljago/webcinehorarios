<%= form_for [:admin, @opinion], html: {class: 'form-horizontal', role: 'form' } do |f| %>
  <%= render_errors @opinion %>
	
  <div class="form-group">
    <%= f.label :author, 'Autor:', class: 'col-lg-2 control-label' %>
		<div class="col-lg-5">
    	<%= f.text_field :author, class: 'form-control' %>
    </div>
  </div>
	<div class="form-group">
		<%= f.label :date, 'Fecha:', class: 'col-lg-2 control-label' %>
		<div class="col-lg-5">
		<%= f.date_select :date, :order => [:day, :month, :year] %>
    </div>
	</div>
  <div class="form-group">
    <%= f.label :comment, 'Comentario:', class: 'col-lg-2 control-label' %>
		<div class="col-lg-5">
    	<%= f.text_area :comment, class: 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
    	<%= f.submit 'Guardar', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<%= link_to [:admin, :opinions], class: 'btn btn-default' do %>
  <i class="icon-arrow-left"></i> Volver
<% end %>
