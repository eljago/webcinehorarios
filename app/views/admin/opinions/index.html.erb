<% provide(:title, "Opiniones") %>
<%= render 'breadcrumbs' %>
<h1>Opiniones</h1>
<table class="table">
  <tr>
    <th>Autor</th>
    <th>Fecha</th>
    <th>Comentario</th>
    <th></th>
  </tr>
  <% @opinions.each do |opinion| %>
    <tr>
      <td><%= opinion.author %></td>
      <td><%= opinion.date %></td>
      <td><%= opinion.comment %></td>
      <td><%= render_index_actions [opinion], only: [:edit, :destroy] %></td>
    </tr>
  <% end %>
</table>
<br/>
<%= link_to [:new, :admin, :opinion], class: 'btn btn-primary' do %>
  <i class="icon-plus"></i>
  Nueva Opini√≥n
<% end %>
