<fieldset class="image">
	<% if f.object.new_record? %>
		<%= f.input :remote_image_url %>
		<%= f.file_field :image %>
  <% else %>
		<% if f.object.image.url %>
    	<%= image_tag(f.object.image.url(:smaller))  %>
		<% else %>
			<%= 'Imágen Inválida' %>
		<% end %>
  <% end %>
	<div class="destroy">
		<%= f.hidden_field :_destroy %>
		<button class="close remove_fields">X</button>
	</div>
	<%= f.check_box :show_portrait_id %>
</fieldset>