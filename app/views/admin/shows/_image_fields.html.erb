<fieldset class="image">
	<div class="row">
		<div class="col-md-11 col-sm-11">
			<% if f.object.new_record? %>
				<%= f.input :remote_image_url %>
		  <% else %>
				<% if f.object.image.url %>
		    	<%= image_tag(f.object.image.url(:smaller))  %>
				<% else %>
					<%= 'Imágen Inválida' %>
				<% end %>
		  <% end %>
		</div>
		<div class="col-md-1 col-sm-1">
			<div class="destroy">
				<%= f.hidden_field :_destroy %>
				<button class="close remove_fields">&times;</button>
			</div>
			<%= f.check_box :show_portrait_id %>
		</div>
	</div>
</fieldset>