<%= form_for [:admin, @show], html: { class: 'form-horizontal show_form', role: 'form' } do |f| %>
  <%= render_errors @show %>
	
			<div class="row">
				<div class="col-sm-8">
					
				  <div class="form-group">
				    <%= f.label :name, 'Nombre:', class: 'col-sm-4 control-label' %>
						<div class="col-sm-7">
				    	<%= f.text_field :name, class: 'form-control' %>
				    </div>
				  </div>
					
				  <div class="form-group">
				    <%= f.label :name_original, 'Nombre Original:', class: 'col-sm-4 control-label' %>
						<div class="col-sm-7">
				    	<%= f.text_field :name_original, class: 'form-control' %>
				    </div>
				  </div>
					
				  <div class="form-group">
				    <%= f.label :remote_image_url, 'URL Imagen:', class: 'col-sm-4 control-label' %>
						<div class="col-sm-7">
				    	<%= f.text_field :remote_image_url, class: 'form-control' %>
							<%= f.file_field :image %>
				    </div>
				  </div>
					
				  <div class="form-group">
				    <%= f.label :year, 'Año:', class: 'col-sm-4 control-label' %>
						<div class="col-sm-7">
				    	<%= f.text_field :year, class: 'form-control' %>
				    </div>
				  </div>
					
				  <div class="form-group">
				    <%= f.label :duration, 'Duración:', class: 'col-sm-4 control-label' %>
						<div class="col-sm-7">
				    	<%= f.text_field :duration, class: 'form-control' %>
				    </div>
				  </div>
					
				  <div class="form-group">
				    <%= f.label :information, 'Synopsis:', class: 'col-sm-4 control-label' %>
						<div class="col-sm-7">
				    	<%= f.text_area :information, rows: '10', class: 'form-control' %>
				    </div>
				  </div>
					
				  <div class="form-group">
				    <%= f.label :imdb_code, 'IMDb code:', class: 'col-sm-4 control-label' %>
						<div class="col-sm-7">
				    	<%= f.text_field :imdb_code, class: 'form-control' %>
				    </div>
				  </div>
					
				  <div class="form-group">
				    <%= f.label :imdb_score, 'IMDb Score', class: 'col-sm-4 control-label' %>
						<div class="col-sm-3">
				    	<%= f.text_field :imdb_score, class: 'form-control' %>
				    </div>
				  </div>
					
				  <div class="form-group">
				    <%= f.label :metacritic_url, 'Metacritic URL:', class: 'col-sm-4 control-label' %>
						<div class="col-sm-7">
				    	<%= f.text_field :metacritic_url, class: 'form-control' %>
				    </div>
				  </div>
					
				  <div class="form-group">
				    <%= f.label :metacritic_score, 'Metacritic Score', class: 'col-sm-4 control-label' %>
						<div class="col-sm-3">
				    	<%= f.text_field :metacritic_score, class: 'form-control' %>
				    </div>
				  </div>
					
				  <div class="form-group">
				    <%= f.label :rotten_tomatoes_url, 'Rotten Tomatoes URL:', class: 'col-sm-4 control-label' %>
						<div class="col-sm-7">
				    	<%= f.text_field :rotten_tomatoes_url, class: 'form-control' %>
				    </div>
				  </div>
					
				  <div class="form-group">
				    <%= f.label :rotten_tomatoes_score, 'Rotten Tomatoes Score', class: 'col-sm-4 control-label' %>
						<div class="col-sm-3">
				    	<%= f.text_field :rotten_tomatoes_score, class: 'form-control' %>
				    </div>
				  </div>
				</div>
					
				<div class="col-sm-3">

				  <div class="form-group">
				    <%= f.label :active, 'Activo?', class: 'col-sm-5 control-label' %>
						<div class="col-sm-7">
				    	<%= f.check_box :active, class: 'form-control' %>
				    </div>
				  </div>
					<div class="form-group">
						<%= f.label :debut, 'Estreno:', class: 'col-sm-5 control-label' %>
						<div class="col-sm-7">
							<%= f.date_select :debut, {:include_blank => true, :default => nil, :order => [:day, :month, :year]} %>
						</div>
				  </div>
					
					<div class="form-group">
				    <%= f.label :rating, 'Rating:', class: 'col-sm-5 control-label' %>
						<div class="col-lg-7">
							<% ['TE','TE+7','13+','14+','15+','16+','18+'].each do |rating| %>
							  <div class="radio">
							    <label>
										<%= f.radio_button :rating, rating, checked: @show.rating == rating %>
										<%= rating.humanize %>
							    </label>
							  </div>
						  <% end %>
				    </div>
					</div>
	
					<% genres = Genre.select([:id, :name]).all(order: :name) %>
					<% if genres.count > 0 %>
					  <div class="form-group">
					    <%= f.label :genre_ids, 'Genres:', class: 'col-lg-5 control-label' %>
							<div class="col-lg-7">
								<% genres.each do |genre| %>
								  <div class="checkbox">
								    <label>
								    	<%= check_box_tag 'show[genre_ids][]', genre.id, @show.genres.map(&:id).include?(genre.id) %>
								    	<%= genre.name.humanize %>
								    </label>
								  </div>
							  <% end %>
					    </div>
					  </div>
					<% end %>
					
			  </div>
			</div>
			
			<div class="row">
				<div class="col-md-12">
					<h3>Personas:</h3>
					<div id="showpersonroles" data-update-url="<%= admin_show_person_roles_sort_url %>">
						<%= f.fields_for :show_person_roles do |b| %>
						  <%= render 'show_person_role_fields', f: b %>
						<% end %>
					</div>
					<br />
					<%= link_to_add_fields "Add Person", f, :show_person_roles %>
					<h3>Imagenes:</h3>
					<%= f.fields_for :images do |b| %>
					  <%= render 'image_fields', f: b %>
					<% end %>
					<br />
					<%= link_to_add_fields "Add Image", f, :images %>
					<h3>Videos:</h3>
					<%= f.fields_for :videos do |b| %>
					  <%= render 'video_fields', f: b %>
					<% end %>
					<br />
					<%= link_to_add_fields "Add Video", f, :videos %>
			  </div>
			</div>

	<br />

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-5">
    	<%= f.submit 'Guardar', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<%= link_to [:admin, :shows], class: 'btn btn-default' do %>
	<i class="icon-arrow-left"></i> Volver
<% end %>