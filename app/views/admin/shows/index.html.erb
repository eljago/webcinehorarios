<% provide(:title, 'Shows') %>
<%= render 'breadcrumbs' %>
<h1>Shows</h1>

<div class="row">
	<div class="col-sm-3">
		<%= link_to [:new, :admin, :show], class: 'btn btn-default' do %>
			<i class="icon-plus"></i> Nuevo Show
		<% end %>
	</div>
	<div class="col-sm-9">
		<%= form_tag [:admin, :shows], method: :get, class: 'form-inline', role: 'form' do %>
			<%= text_field_tag :query, params[:query], class: 'form-control' %>
			<%= submit_tag "Buscar", name: nil, class: 'btn btn-default' %>
		<% end %>
	</div>
</div>

<p><%= will_paginate @shows, previous_label: h("<"), next_label: h(">"), renderer: BootstrapPagination::Rails %></p>

<table class="table">
  <tr>
		<th>Activo</th>
    <th>Nombre</th>
    <th>Imagen</th>
    <th>Duraci√≥n</th>
    <th>Estreno</th>
    <th>Rating</th>
    <th></th>
  </tr>

<% @shows.each do |show| %>
  <tr>
    <td><%= show.active %></td>
    <td><%= show.name %></td>
    <td><%= link_to image_tag(show.image.smallest), show.image.to_s if show.image %></td>
    <td><%= show.duration %></td>
    <td><%= show.debut %></td>
    <td><%= show.rating %></td>
		<td><%= render_index_actions [show] %></td>
  </tr>
<% end %>
</table>

<p><%= will_paginate @shows, previous_label: h("<"), next_label: h(">"), renderer: BootstrapPagination::Rails %></p>
