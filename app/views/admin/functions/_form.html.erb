<%= simple_form_for [:admin, @theater, @function] do |f| %>
	<%= f.error_notification %>

	<% date = params[:date].to_date %>
	<div class="form-inputs">
		<%= f.input :date, default: date %>
    <%= f.association :theater %>
		<%= f.association :show, collection: Show.order('shows.name ASC').all, :input_html => { :class => "chzn-select" } %>
    <%= f.association :function_types, as: :check_boxes %>
		
		Horarios de <%= date %>
		<%= text_field_tag :horarios, @function.showtimes.map{ |showtime| l(showtime.time, format: :normal_time ) }.join(', '), class: 'input-xxlarge' %>
	</div>
	
	<% if params[:action] == "new" %>
		<% 7.times do |n| %>
			Horarios de <%= I18n.localize(date = date.next, format: :short) %>
			<%= text_field_tag "horarios_extra_#{n}", "", class: 'input-xxlarge' %><br />
		<% end %>
	<% end %>

	<div class="form-actions">
	  <%= f.button :submit, class: 'btn btn-primary'  %>
	</div>
<% end %>
