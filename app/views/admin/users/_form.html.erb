<%= simple_form_for [:admin,@user] do |f| %>
	<%= f.error_notification %>

	<div class="form-inputs">
		<%= f.input :name %>
		<%= f.input :email %>
		<%= f.input :password %>
		<%= f.input :password_confirmation %>
		<%= f.input :admin if current_user.admin? %>
	</div>

	<div class="form-actions">
	  <%= f.button :submit, class: 'btn btn-primary'  %>
	</div>
<% end %>