= render 'breadcrumbs'
%h1 Cines

%table.table
	%tr
		%th Nombre
		%th Imagen
		%th Function types
		%th 
		
	- @cinemas.each do |cinema|
		%tr
			%td= link_to cinema.name, admin_cinema_theaters_path(cinema)
			%td= link_to image_tag(cinema.image, size: "80x80"), cinema.image.to_s
			%td= cinema.function_types.select(:name).order(:name).all.map(&:name).join(" ")
			%td= render_index_actions [cinema], only: [:edit, :destroy]
%br

= link_to new_admin_cinema_path, class: 'btn btn-default' do
	%i.icon-plus
	Nuevo Cine