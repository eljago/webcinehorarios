
<p>
  <b>Nombre:</b>
  <%= @person.name %>
</p>
<p>
  <b>Imagen:</b>
  <%= link_to(image_tag(@person.image.url), @person.image.to_s) if @person.image %>
</p>

<%= link_to [:admin, :people], class: 'btn btn-default' do %>
	<i class="icon-arrow-left"></i> Volver
<% end %>
<%= link_to [:edit, :admin, @person], class: 'btn btn-default' do %>
	<i class="icon-edit"></i> Editar
<% end %>