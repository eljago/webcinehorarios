<h1>Personas</h1>

<%= link_to [:new, :admin, :person], class: 'btn' do %>
	<i class="icon-plus"></i> Nueva Persona
<% end %>

<%= render 'shared/letter_pagination' %>

<table class="table">
  <tr>
    <th>Nombre</th>
    <th>Imagen</th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.name %></td>
	<td><%= link_to image_tag(person.image.smallest), person.image.to_s if person.image %></td>
	<td><%= render_index_actions [person] %></td>
  </tr>
<% end %>
</table>

<br />
