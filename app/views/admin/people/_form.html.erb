<%= simple_form_for [:admin, @person] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= select_tag "person_checker", options_from_collection_for_select(Person.order(:name).all, "id", "name"), include_blank: true , class: 'chzn-select' %>
		<%= f.input :name %>
		<%= f.input :remote_image_url %>
	  <%= f.input :birthdate, include_blank: true %>
		<%= f.input :deathdate, include_blank: true %>
		<%= f.input :birthplace %>
		<%= f.input :height %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary'  %>
  </div>
<% end %>