<fieldset class="award_specific_category">
  <div class="form-group row">
		<div class="col-sm-2 col-sm-offset-1 control-label">Nombre:</div>
		<div class="col-sm-5">
    	<%= f.text_field :name, class: 'form-control' %>
    </div>
		<div class="destroy col-sm-1">
			<%= f.hidden_field :_destroy %>
			<button class="close remove_fields">X</button>
		</div>
  </div>
  <div class="form-group row">
		<div class="col-sm-2 col-sm-offset-1 control-label">Categor√≠a General:</div>
		<div class="col-sm-5">
			<%= f.collection_select :award_category_id, @award_categories, :id, :name, {include_blank: true}, { class: "chzn-select, form-control" } %>
    </div>
  </div>
	
	<h3 class="col-sm-offset-1">Nominados:</h3>
  <%= f.fields_for :nominations do |builder| %>
    <%= render 'nomination_fields', f: builder %>
  <% end %>
	<br />
	<%= link_to_add_fields "Add Nominado", f, :nominations %>
</fieldset>
<br />