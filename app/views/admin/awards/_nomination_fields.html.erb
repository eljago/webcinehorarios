<fieldset class="award_specific_nomination">
  <div class="form-group row">
    <%= f.label :winner, 'Ganador?', class: 'col-sm-2 col-sm-offset-2 control-label' %>
		<div class="col-sm-5">
    	<%= f.check_box :winner, class: 'form-control' %>
    </div>
		<div class="destroy col-sm-1">
			<%= f.hidden_field :_destroy %>
			<button class="close remove_fields">X</button>
		</div>
  </div>
  <div class="form-group row">
    <%= f.label :show_id, 'Show:', class: 'col-sm-2 col-sm-offset-2 control-label' %>
		<div class="col-sm-5">
			<%= f.collection_select :show_id, @shows, :id, :name, {include_blank: true}, { class: "chzn-select, form-control" } %>
    </div>
  </div>
</fieldset>