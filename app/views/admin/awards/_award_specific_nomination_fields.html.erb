<fieldset class="award_specific_nomination">
  <div class="form-group row">
    <%= f.label :name, 'Nombre:', class: 'col-sm-2 col-sm-offset-1 control-label' %>
		<div class="col-sm-5">
    	<%= f.text_field :name, class: 'form-control' %>
    </div>
		<div class="destroy col-sm-1">
			<%= f.hidden_field :_destroy %>
			<button class="close remove_fields">X</button>
		</div>
  </div>
  <div class="form-group row">
    <%= f.label :award_category, 'CategorÃ­a General:', class: 'col-sm-2 col-sm-offset-1 control-label' %>
		<div class="col-sm-5">
			<%= f.collection_select :award_category_id, @award_categories, :id, :name, {include_blank: true}, { class: "chzn-select, form-control" } %>
    </div>
  </div>
	
	<h3 class="col-sm-offset-1">Shows:</h3>
  <%= f.fields_for :nominations do |builder| %>
    <%= render 'nomination_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add Show", f, :nominations %>
</fieldset>
